                <div class="card-body">
                  <div class="row">
                    <div class="col-md-8">
                      <form action="/researchdetails" method="post">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <h4 class="mt-2">Title of the Paper :</h4>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="papertitle" placeholder="Title of the Paper" required>
                            </div>
                        </div>

                        <div class="form-group row">
                          <div class="col-md-3">
                              <h4 class="mt-2">Number of Author/s :</h4>
                          </div>
                          <div class="col-md-8">
                              <input type="number" class="form-control" id="number_author" name="number_author" min="0" placeholder="Number of Authors" required>
                          </div>
                        </div>

                        <div id="authordetails" style="display:none"></div>
                        <datalist id="departments"></datalist>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <h4 class="mt-2">Name of Journal :</h4>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="journalname" placeholder="Name of the Journal" required>
                            </div>
                        </div>

                        <div class="form-group row">
                          <div class="col-md-3">
                              <h4 class="mt-2">Status :</h4>
                          </div>
                          <div class="col-md-8 mt-2">
                              <div class="form-check-inline">
                                  <label class="form-check-label">
                                    <input type="radio" class="form-check-input status" name="status" id="status-accepted" value="Accepted" required>Accepted
                                  </label>
                                </div>
                                <div class="form-check-inline">
                                  <label class="form-check-label">
                                    <input type="radio" class="form-check-input status" name="status" id="status-published" value="Published" required>Published
                                  </label>
                                </div>
                                <div class="form-check-inline">
                                  <label class="form-check-label">
                                    <input type="radio" class="form-check-input status" name="status" id="status-communicated" value="Communicated" required>Communicated
                                  </label>
                              </div>
                          </div>
                      </div>

                      <div class="form-group row" id="publicationdetails" style="display: none;">
                          <div class="col-md-3">
                              <h4 class="mt-2">Year of Publication :</h4>
                          </div>
                          <div class="col-md-8">
                              <input type="text" class="form-control" name="publicationyear" list="publicationyear" placeholder="Year">
                              <datalist id="publicationyear"></datalist>
                          </div>
                      </div>

                      <div class="form-group row">
                          <div class="col-md-3">
                              <h4 class="mt-2">Published With ?</h4>
                          </div>
                          <div class="col-md-8 mt-2">
                              <div class="form-check-inline">
                                  <label class="form-check-label">
                                      <input type="radio" class="form-check-input journalwith" name="publishedwith" id="journal_ugc" value="UGC" required>UGC
                                  </label>
                                </div>
                                <div class="form-check-inline">
                                  <label class="form-check-label">
                                      <input type="radio" class="form-check-input journalwith" name="publishedwith" id="journal_scopus" value="Scopus" required>Scopus
                                  </label>
                                </div>
                          </div>
                      </div>

